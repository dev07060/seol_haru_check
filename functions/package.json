{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "deploy:staging": "firebase use staging && firebase deploy --only functions",
    "deploy:production": "firebase use production && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "logs:staging": "firebase use staging && firebase functions:log",
    "logs:production": "firebase use production && firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "predeploy": "npm run lint && npm run test && npm run build",
    "postdeploy": "echo 'Deployment completed successfully'",
    "deploy:staging:full": "node scripts/deploy.js staging",
    "deploy:production:full": "node scripts/deploy.js production",
    "test:deployment": "node scripts/test-deployment.js"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/vertexai": "^1.7.0",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "typescript": "^4.9.0"
  },
  "private": true
}
